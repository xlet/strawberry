<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jsonMapper" class="cn.w.im.core.jackson.MapperCreator">
        <property name="subTypes">
            <list>
                <ref bean="testMessage" />
            </list>
        </property>
    </bean>

    <bean id="testMessage" class="cn.w.im.core.jackson.NamedSubType">
        <property name="type" value="cn.w.im.core.test.json.TestMessage"/>
        <property name="name" value="Test"/>
    </bean>
</beans>